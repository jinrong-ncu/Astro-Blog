---
// apple-tabs.astro - Apple Tabs 独立预览页面
import AppleTabs from '../../components/demos/AppleTabs.astro';
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Apple 风格毛玻璃 Tab 切换</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 3rem;
      overflow: hidden;
      position: relative;
    }

    /* 流动渐变背景 */
    body::before {
      content: '';
      position: fixed;
      inset: 0;
      background: 
        radial-gradient(circle at 20% 30%, rgba(120, 119, 198, 0.3), transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(255, 122, 127, 0.3), transparent 50%),
        radial-gradient(circle at 50% 50%, rgba(255, 204, 92, 0.2), transparent 60%),
        linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      animation: gradientFlow 15s ease infinite;
      z-index: -1;
    }

    @keyframes gradientFlow {
      0%, 100% {
        opacity: 1;
        transform: scale(1) rotate(0deg);
      }
      50% {
        opacity: 0.9;
        transform: scale(1.1) rotate(5deg);
      }
    }

    /* 深色模式背景 */
    @media (prefers-color-scheme: dark) {
      body::before {
        background: 
          radial-gradient(circle at 20% 30%, rgba(88, 86, 214, 0.4), transparent 50%),
          radial-gradient(circle at 80% 70%, rgba(255, 69, 96, 0.4), transparent 50%),
          radial-gradient(circle at 50% 50%, rgba(255, 159, 64, 0.3), transparent 60%),
          linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
      }
    }

    .demo-section {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      align-items: center;
    }

    h1 {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
      font-size: 2rem;
      font-weight: 700;
      color: rgba(255, 255, 255, 0.95);
      text-shadow: 0 2px 12px rgba(0, 0, 0, 0.2);
      letter-spacing: -0.5px;
    }

    .description {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
      font-size: 0.95rem;
      color: rgba(255, 255, 255, 0.8);
      text-align: center;
      max-width: 500px;
      line-height: 1.6;
    }
  </style>
</head>
<body>
  <div class="demo-section">
    <h1>Apple 风格 Segmented Control</h1>
    <AppleTabs tabs={['首页', '发现', '我的']} defaultTab={0} />
  </div>

  <div class="demo-section">
    <p class="description">更多选项示例</p>
    <AppleTabs 
      tabs={['全部', '音乐', '播客', '有声书', '电台']} 
      defaultTab={1} 
    />
  </div>

  <div class="demo-section">
    <p class="description">英文示例</p>
    <AppleTabs 
      tabs={['Overview', 'Features', 'Pricing', 'Support']} 
      defaultTab={0} 
    />
  </div>
</body>
</html>

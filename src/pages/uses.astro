---
import Layout from "../layouts/Layout.astro";
import {
    Monitor,
    Cpu,
    Keyboard,
    Code2,
    Terminal,
    Globe,
    Zap,
    Battery,
    Download,
    Camera,
} from "lucide-react";
import "../styles/global.css";

const items = [
    {
        category: "核心装备 (Workstation)",
        icon: Monitor,
        list: [
            { name: 'MacBook Pro 14"', desc: "M4 Max / 32GB / 1TB", icon: Cpu },
            {
                name: "LG 27UP850",
                desc: "4K Display / Type-C 96W",
                icon: Monitor,
            },
            {
                name: "HHKB Professional Hybrid",
                desc: "Type-S / 静电容",
                icon: Keyboard,
            },
        ],
    },
    {
        category: "开发环境 (Dev Stack)",
        icon: Code2,
        list: [
            {
                name: "VS Code",
                desc: "Theme: Vercel Dark / Font: JetBrains Mono",
                icon: Code2,
            },
            { name: "Warp", desc: "Rust-based Terminal / Zsh", icon: Terminal },
            {
                name: "Arc Browser",
                desc: "The Chrome replacement",
                icon: Globe,
            },
        ],
    },
    {
        category: "效率神器 (Productivity)",
        icon: Zap,
        list: [
            { name: "Raycast", desc: "Spotlight 的完美替代", icon: Zap },
            { name: "CleanShot X", desc: "Mac 截图录屏天花板", icon: Camera },
            { name: "AlDente Pro", desc: "电池健康管理", icon: Battery },
            { name: "Downie 4", desc: "万能视频下载器", icon: Download },
        ],
    },
];
---

<Layout title="Uses - 刘金荣">
    <div class="max-w-5xl mx-auto px-6 py-12 md:py-20 animate-fade-in">
        <div class="mb-16">
            <h1 class="text-4xl font-bold mb-6 text-zinc-900 dark:text-white">
                Uses
            </h1>
            <p class="text-zinc-500 dark:text-zinc-400 text-lg max-w-2xl">
                工欲善其事，必先利其器。这里列出了我日常工作和生活中使用的硬件与软件。
            </p>
            <div
                class="mt-6 mb-6 inline-flex items-center text-xs font-medium px-2.5 py-0.5 rounded-full bg-zinc-100 dark:bg-zinc-800 text-zinc-600 dark:text-zinc-400"
            >
                Last Updated: Feb 2026
            </div>
        </div>

        <div class="space-y-20">
            {
                items.map((section) => (
                    <section class="mb-8">
                        <h2 class="text-2xl font-bold mb-4 flex items-center gap-3 text-zinc-900 dark:text-zinc-100 pb-4 border-b border-zinc-100 dark:border-zinc-800">
                            <section.icon className="w-6 h-6" />
                            {section.category}
                        </h2>

                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            {section.list.map((item) => (
                                <div class="p-6 rounded-2xl border border-zinc-200/60 dark:border-zinc-800/60 bg-white dark:bg-zinc-900/50 hover:border-zinc-300 dark:hover:border-zinc-700 transition-colors group">
                                    <div class="flex items-start gap-5">
                                        <div class="p-3 rounded-xl bg-zinc-100 dark:bg-zinc-800 text-zinc-600 dark:text-zinc-400 group-hover:text-zinc-900 dark:group-hover:text-zinc-100 transition-colors">
                                            <item.icon className="w-6 h-6" />
                                        </div>
                                        <div>
                                            <h3 class="font-bold text-zinc-900 dark:text-zinc-100 text-lg mb-1">
                                                {item.name}
                                            </h3>
                                            <p class="text-sm text-zinc-500 dark:text-zinc-400 leading-relaxed">
                                                {item.desc}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            ))}
                        </div>
                    </section>
                ))
            }
        </div>
    </div>
</Layout>

<style>
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-fade-in {
        animation: fadeIn 0.6s ease-out forwards;
    }
</style>

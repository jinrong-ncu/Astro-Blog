---
import { SITE_TITLE, AUTHOR } from "../consts";

const today = new Date();
---

<footer
    class="border-t border-zinc-100 dark:border-zinc-800 bg-white dark:bg-zinc-950 py-12 mt-20 transition-colors"
>
    <div class="max-w-5xl mx-auto px-6 grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Column 1: Links & Info -->
        <div class="space-y-8">
            <!-- Friend Links -->
            <div class="space-y-3">
                <h3
                    class="text-sm font-semibold text-zinc-900 dark:text-zinc-100"
                >
                    友情链接
                </h3>
                <div
                    class="flex flex-wrap gap-4 text-sm text-zinc-500 dark:text-zinc-400"
                >
                    <a
                        href="https://antfu.me"
                        target="_blank"
                        class="hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors"
                    >
                        Antfu
                    </a>
                    <a
                        href="https://astro.build"
                        target="_blank"
                        class="hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors"
                    >
                        Astro
                    </a>
                    <!-- <a
                        href="https://liujinrong.cn"
                        class="hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors"
                    >
                        刘金荣 Blog
                    </a> -->
                </div>
            </div>

            <!-- Social Links -->
            <div class="space-y-3">
                <h3
                    class="text-sm font-semibold text-zinc-900 dark:text-zinc-100"
                >
                    关注我
                </h3>
                <div
                    class="flex gap-4 text-sm text-zinc-500 dark:text-zinc-400"
                >
                    <a
                        href="https://github.com/jinrong-ncu"
                        target="_blank"
                        class="hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors"
                    >
                        GitHub
                    </a>
                    <!-- <a
                        href="https://x.com/liujinrong"
                        target="_blank"
                        class="hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors"
                    >
                        Twitter
                    </a> -->
                    <a
                        href="mailto:jinrong.liu@email.ncu.edu.cn"
                        class="hover:text-zinc-900 dark:hover:text-zinc-100 transition-colors"
                    >
                        Email
                    </a>
                </div>
            </div>
        </div>

        <!-- Column 2: Status & Copyright -->
        <div class="flex flex-col md:items-end justify-between space-y-8">
            <!-- Live Status -->
            <div
                class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-zinc-100 dark:bg-zinc-900/50 border border-zinc-200 dark:border-zinc-800 w-fit"
            >
                <span class="relative flex h-2 w-2">
                    <span
                        class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"
                    ></span>
                    <span
                        class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"
                    ></span>
                </span>
                <span
                    class="text-xs font-medium text-zinc-600 dark:text-zinc-400"
                >
                    Coding in Shanghai
                </span>
            </div>

            <!-- Copyright -->
            <div
                class="flex flex-col md:items-end gap-2 text-sm text-zinc-400 dark:text-zinc-500"
            >
                <p>
                    &copy; {today.getFullYear()}
                    {AUTHOR}. All rights reserved.
                </p>
                <div
                    class="flex items-center gap-2"
                    id="busuanzi_container_site_pv"
                    style="display: none;"
                >
                    <span
                        >本站总访问量 <span
                            id="busuanzi_value_site_pv"
                            class="text-zinc-600 dark:text-zinc-300"></span> 次</span
                    >
                </div>
                <p class="text-xs">
                    Built with <a
                        href="https://astro.build"
                        target="_blank"
                        class="text-zinc-500 dark:text-zinc-400 hover:underline"
                        >Astro</a
                    > & <a
                        href="https://tailwindcss.com"
                        target="_blank"
                        class="text-zinc-500 dark:text-zinc-400 hover:underline"
                        >Tailwind CSS</a
                    >
                </p>
            </div>
        </div>
    </div>
</footer>

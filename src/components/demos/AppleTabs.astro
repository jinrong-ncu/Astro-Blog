---
// AppleTabs.astro - Apple 风格毛玻璃 Segmented Control
interface Props {
  tabs?: string[];
  defaultTab?: number;
}

const { 
  tabs = ['首页', '发现', '我的'],
  defaultTab = 0 
} = Astro.props;
---

<div class="apple-tabs-container">
  <div class="glass-tabs">
    <div class="pill-indicator"></div>
    {tabs.map((tab, index) => (
      <button 
        class={`tab-item ${index === defaultTab ? 'active' : ''}`}
        data-index={index}
      >
        {tab}
      </button>
    ))}
  </div>
</div>

<style>
  .apple-tabs-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
  }

  .glass-tabs {
    position: relative;
    display: inline-flex;
    padding: 4px;
    background-color: rgba(255, 255, 255, 0.15);
    backdrop-filter: saturate(180%) blur(20px);
    -webkit-backdrop-filter: saturate(180%) blur(20px);
    border-radius: 16px;
    box-shadow: 
      inset 0 0 0 1px rgba(255, 255, 255, 0.2),
      0 8px 32px rgba(0, 0, 0, 0.12),
      0 2px 8px rgba(0, 0, 0, 0.08);
    gap: 2px;
  }

  .pill-indicator {
    position: absolute;
    top: 4px;
    left: 4px;
    height: calc(100% - 8px);
    background: rgba(255, 255, 255, 0.85);
    border-radius: 12px;
    box-shadow: 
      0 2px 8px rgba(0, 0, 0, 0.1),
      0 1px 2px rgba(0, 0, 0, 0.06);
    transition: all 0.5s cubic-bezier(0.32, 0.72, 0, 1);
    pointer-events: none;
    z-index: 1;
  }

  .tab-item {
    position: relative;
    z-index: 2;
    padding: 8px 20px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.5);
    background: transparent;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
    user-select: none;
    -webkit-user-select: none;
    -webkit-tap-highlight-color: transparent;
  }

  .tab-item:hover {
    color: rgba(0, 0, 0, 0.7);
  }

  .tab-item.active {
    color: rgba(0, 0, 0, 0.9);
    font-weight: 600;
  }

  /* 深色模式适配 */
  @media (prefers-color-scheme: dark) {
    .glass-tabs {
      background-color: rgba(0, 0, 0, 0.3);
      box-shadow: 
        inset 0 0 0 1px rgba(255, 255, 255, 0.1),
        0 8px 32px rgba(0, 0, 0, 0.3),
        0 2px 8px rgba(0, 0, 0, 0.2);
    }

    .pill-indicator {
      background: rgba(255, 255, 255, 0.2);
      box-shadow: 
        0 2px 8px rgba(0, 0, 0, 0.2),
        0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .tab-item {
      color: rgba(255, 255, 255, 0.6);
    }

    .tab-item:hover {
      color: rgba(255, 255, 255, 0.8);
    }

    .tab-item.active {
      color: rgba(255, 255, 255, 0.95);
    }
  }
</style>

<script>
  function initAppleTabs() {
    const container = document.querySelector('.glass-tabs');
    if (!container) return;

    const pill = container.querySelector('.pill-indicator') as HTMLElement;
    const tabs = container.querySelectorAll('.tab-item') as NodeListOf<HTMLElement>;
    
    if (!pill || tabs.length === 0) return;

    // 初始化滑块位置
    function updatePillPosition(targetTab: HTMLElement, immediate = false) {
      const { offsetLeft, offsetWidth } = targetTab;
      
      if (immediate) {
        pill.style.transition = 'none';
      }
      
      pill.style.transform = `translateX(${offsetLeft - 4}px)`;
      pill.style.width = `${offsetWidth}px`;
      
      if (immediate) {
        // 强制重排后恢复过渡
        pill.offsetHeight;
        pill.style.transition = '';
      }
    }

    // 设置初始激活 Tab
    const activeTab = container.querySelector('.tab-item.active') as HTMLElement;
    if (activeTab) {
      updatePillPosition(activeTab, true);
    }

    // 点击切换
    tabs.forEach((tab) => {
      tab.addEventListener('click', () => {
        // 移除所有激活状态
        tabs.forEach(t => t.classList.remove('active'));
        
        // 激活当前 Tab
        tab.classList.add('active');
        
        // 更新滑块位置（带动画）
        updatePillPosition(tab);
      });
    });

    // 响应式：窗口大小改变时重新计算
    let resizeTimer: number;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        const currentActive = container.querySelector('.tab-item.active') as HTMLElement;
        if (currentActive) {
          updatePillPosition(currentActive, true);
        }
      }, 150);
    });
  }

  // Astro 页面加载时初始化
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initAppleTabs);
  } else {
    initAppleTabs();
  }

  // 支持 Astro 的 View Transitions
  document.addEventListener('astro:page-load', initAppleTabs);
</script>

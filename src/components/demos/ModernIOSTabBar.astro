---
// ModernIOSTabBar.astro - 现代 iOS 风格底部导航栏（光之气泡动效）
interface Props {
  activeTab?: number;
}

const { activeTab = 0 } = Astro.props;

const tabs = [
  { id: 'home', label: '首页' },
  { id: 'discover', label: '发现' },
  { id: 'create', label: '创作' },
  { id: 'message', label: '消息' },
  { id: 'profile', label: '我的' }
];
---

<div class="modern-ios-tab-bar">
  {tabs.map((tab, index) => (
    <button 
      class={`tab-button ${index === activeTab ? 'active' : ''}`}
      data-tab={tab.id}
      data-index={index}
    >
      <!-- 底层：光之气泡层 -->
      <span class="touch-bubble"></span>
      
      <!-- 顶层：图标和文字 -->
      <div class="tab-content">
        <div class="tab-icon">
          {tab.id === 'home' && (
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M3 9L12 2L21 9V20C21 20.5304 20.7893 21.0391 20.4142 21.4142C20.0391 21.7893 19.5304 22 19 22H5C4.46957 22 3.96086 21.7893 3.58579 21.4142C3.21071 21.0391 3 20.5304 3 20V9Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M9 22V12H15V22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          )}
          {tab.id === 'discover' && (
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
              <path d="M12 6V12L16 14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          )}
          {tab.id === 'create' && (
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
              <path d="M12 8V16M8 12H16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          )}
          {tab.id === 'message' && (
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M21 15C21 15.5304 20.7893 16.0391 20.4142 16.4142C20.0391 16.7893 19.5304 17 19 17H7L3 21V5C3 4.46957 3.21071 3.96086 3.58579 3.58579C3.96086 3.21071 4.46957 3 5 3H19C19.5304 3 20.0391 3.21071 20.4142 3.58579C20.7893 3.96086 21 4.46957 21 5V15Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          )}
          {tab.id === 'profile' && (
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M20 21V19C20 17.9391 19.5786 16.9217 18.8284 16.1716C18.0783 15.4214 17.0609 15 16 15H8C6.93913 15 5.92172 15.4214 5.17157 16.1716C4.42143 16.9217 4 17.9391 4 19V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          )}
        </div>
        <span class="tab-label">{tab.label}</span>
      </div>
    </button>
  ))}
</div>

<style>
  .modern-ios-tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-around;
    align-items: flex-end;
    padding: 8px 8px calc(8px + env(safe-area-inset-bottom));
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0.7) 0%,
      rgba(245, 245, 247, 0.8) 100%
    );
    backdrop-filter: saturate(180%) blur(25px);
    -webkit-backdrop-filter: saturate(180%) blur(25px);
    border-top: 0.5px solid rgba(255, 255, 255, 0.8);
    box-shadow: 
      inset 0 1px 0 0 rgba(255, 255, 255, 0.5),
      0 -1px 8px rgba(0, 0, 0, 0.04);
    z-index: 1000;
  }

  .tab-button {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4px 12px;
    background: transparent;
    border: none;
    cursor: pointer;
    color: #8e8e93;
    -webkit-tap-highlight-color: transparent;
    user-select: none;
    -webkit-user-select: none;
    flex: 1;
    max-width: 80px;
    min-height: 48px;
    overflow: visible;
  }

  /* 底层：光之气泡 */
  .touch-bubble {
    position: absolute;
    inset: -4px;
    background: radial-gradient(
      circle at center,
      rgba(255, 255, 255, 0.6) 0%,
      rgba(255, 255, 255, 0.3) 50%,
      rgba(255, 255, 255, 0.1) 100%
    );
    border-radius: 14px;
    opacity: 0;
    transform: scale(0.85);
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    pointer-events: none;
    box-shadow: 
      inset 0 0 0 0.5px rgba(255, 255, 255, 0.4),
      0 2px 8px rgba(0, 0, 0, 0.08);
    z-index: 1;
  }

  /* 顶层：内容区 */
  .tab-content {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2px;
    z-index: 2;
    transition: transform 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    will-change: transform;
  }

  .tab-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
  }

  .tab-icon svg {
    width: 100%;
    height: 100%;
    color: inherit;
  }

  .tab-label {
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'Helvetica Neue', Arial, sans-serif;
    font-size: 10px;
    font-weight: 500;
    line-height: 1.2;
    letter-spacing: -0.08px;
    color: inherit;
  }

  /* 选中态 */
  .tab-button.active {
    color: #007AFF;
  }

  /* 按压效果：光之气泡显现 + 内容缩小 */
  .tab-button:active .touch-bubble {
    opacity: 1;
    transform: scale(1);
    transition: all 0.05s ease-out;
  }

  .tab-button:active .tab-content {
    transform: scale(0.92);
    transition: transform 0.05s ease-out;
  }

  /* Hover 效果（仅桌面端） */
  @media (hover: hover) {
    .tab-button:hover {
      opacity: 0.8;
    }
  }

  /* 深色模式 */
  @media (prefers-color-scheme: dark) {
    .modern-ios-tab-bar {
      background: linear-gradient(
        to bottom,
        rgba(30, 30, 30, 0.6) 0%,
        rgba(10, 10, 10, 0.8) 100%
      );
      border-top: 0.5px solid rgba(255, 255, 255, 0.15);
      box-shadow: 
        inset 0 1px 0 0 rgba(255, 255, 255, 0.1),
        0 -1px 8px rgba(0, 0, 0, 0.3);
    }

    .tab-button {
      color: #98989d;
    }

    .tab-button.active {
      color: #0A84FF;
    }

    .touch-bubble {
      background: radial-gradient(
        circle at center,
        rgba(255, 255, 255, 0.15) 0%,
        rgba(255, 255, 255, 0.08) 50%,
        rgba(255, 255, 255, 0.03) 100%
      );
      box-shadow: 
        inset 0 0 0 0.5px rgba(255, 255, 255, 0.2),
        0 2px 8px rgba(0, 0, 0, 0.2);
    }
  }
</style>

<script>
  function initModernIOSTabBar() {
    const tabBar = document.querySelector('.modern-ios-tab-bar');
    if (!tabBar) return;

    const tabs = tabBar.querySelectorAll('.tab-button');

    // 关键：iOS Safari 兼容性修复
    // 必须添加 touchstart 监听才能激活 :active 伪类
    tabs.forEach((tab) => {
      tab.addEventListener('touchstart', () => {}, { passive: true });

      tab.addEventListener('click', () => {
        // 移除所有激活状态
        tabs.forEach(t => t.classList.remove('active'));
        
        // 激活当前 Tab
        tab.classList.add('active');

        // 触觉反馈（如果支持）
        if ('vibrate' in navigator) {
          navigator.vibrate(10);
        }
      });
    });
  }

  // 初始化
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initModernIOSTabBar);
  } else {
    initModernIOSTabBar();
  }

  // 支持 Astro View Transitions
  document.addEventListener('astro:page-load', initModernIOSTabBar);
</script>
